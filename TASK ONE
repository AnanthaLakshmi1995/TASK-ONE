#include<bits/stdc++.h>
using namespace std;

class Solution
{
public:
     int setKthBit(int N,int K)
     {
        return ((1 << k) | N);
      }
};
  int main()
  {
  int t;
  cin >> t;
  while (t--)
  {
   int N,K;
   cin >> N>> K;
    
   Solution ob;
   int ans=ob.setKthBit(N,K);
   cout << ans << endl;
  }
  return 0;'
  }
  
